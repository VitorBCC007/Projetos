#Regras da cripto substituição de letra por N elementos (Simbolos)

def cripto(frase):
    tradutor = ""
    for letra in frase:
        if letra in "a":
            tradutor = tradutor + "!"
        elif letra in "b":
            tradutor = tradutor + "@"
        elif letra in "c":
            tradutor = tradutor + "#"
        elif letra in "d":
            tradutor = tradutor + "$"
        elif letra in "f":
            tradutor = tradutor + "%"
        elif letra in "g":
            tradutor = tradutor + "-"
        elif letra in "h":
            tradutor = tradutor + "&"
        elif letra in "j":
            tradutor = tradutor + "*"
        elif letra in "k":
            tradutor = tradutor + "("
        elif letra in "l":
            tradutor = tradutor + ")"
        else:
            tradutor = tradutor + letra
    return tradutor

#Cript 

print("---------------Cripto----------------\n")
usuario = (cripto(input('Digite sua frase: ')))
print(f'sua frase cripto será: {usuario}')
