#Descript
def descripto(frase):
    descripto = ""
    for letra in frase:
        if letra in "!":
            descripto = descripto + "a"
        elif letra in "@":
            descripto = descripto + "b"
        elif letra in "#":
            descripto = descripto + "c"
        elif letra in "$":
            descripto = descripto + "d"
        elif letra in "%":
            descripto = descripto + "f"
        elif letra in "-":
            descripto = descripto + "g"
        elif letra in "&":
            descripto = descripto + "h"
        elif letra in "*":
            descripto = descripto + "j"
        elif letra in "(":
            descripto = descripto + "k"
        elif letra in ")":
            descripto = descripto + "l"
        else: descripto = descripto + letra
    return descripto

#Descripto
print("\n----------Descripto----------")
print(descripto(input('Sua frase descripto: ')))
